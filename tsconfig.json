{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "lib": ["ES2018"],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strict": true,
        "declaration": true,
        "outDir": "build",
        "sourceMap": false,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "newLine": "lf",
        "types": ["node"],
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
